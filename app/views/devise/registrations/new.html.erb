<br>
<div class="row">
  <div class="small-6 small-centered columns text-center">
    <h2>Sign up</h2>
  </div>
</div>
<div class="row">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'small-12 large-6 medium-6 medium-centered large-centered columns' }) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="row">
      <div class="field small-12 columns">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>
    </div>
    
    <div class="row">
      <div class="field small-12 columns">
          <%= f.label :password, "Password (#{@minimum_password_length} characters minimum)" %>
          <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="field small-12 columns">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

    <div class="row">
      <div class="actions small-10 small-centered columns text-center">
          <%= f.submit "Sign up", class: 'button small' %>
          <br>
          <%= render "devise/shared/links" %>
      </div>
    </div>

  <% end %>

</div>



