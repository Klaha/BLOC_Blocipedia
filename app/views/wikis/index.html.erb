<div class="row">
  <div class="small-12 columns small-centered text-center">
    <h2>Public Wikis:</h2>
  </div>
</div>
<br>
<div class="row">
  <div class="small-8 columns small-centered">
    <table>
      <thead>
        <tr>
          <th class="text-center">Title</th>
          <% if current_user %>
            <th class="text-center">Edit</th>
            <th class="text-center">Delete</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @publicwikis.each do |publicwiki| %>
          <tr>
            <td><strong><%= link_to publicwiki.title, wiki_path(publicwiki) %></strong></td>
            <% if current_user %>
              <td><%= link_to "Edit", edit_wiki_path(publicwiki) %></td>
              <td><%= link_to "Delete", wiki_path(publicwiki), method: :delete %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% if policy(@wikis).create? %>
  <div class="row">
    <div class="small-12 columns small-centered text-center">
      <%= link_to "New Wiki", new_wiki_path, class: 'button small info' %>
    </div>
  </div>
<% end %>

<% if current_user && (current_user.role == 'admin' || current_user.premium?)  %>
  <div class="row">
    <div class="small-8 columns small-centered text-center">
      <h2>Private Wikis:</h2>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="small-8 columns small-centered">
      <table>
        <thead>
          <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Edit</th>
            <th class="text-center">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @privatewikis.each do |privatewiki| %>
          <tr>
            <td><strong><%= link_to privatewiki.title, wiki_path(privatewiki) %></strong></td>
            <td><%= link_to "Edit", edit_wiki_path(privatewiki) %></td>
            <td><%= link_to "Delete", wiki_path(privatewiki), method: :delete %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<% if current_user && (!current_user.premium? && current_user.wikis.where('private == ?', true).exists?) %>
  <div class="row">
        <div class="small-8 columns small-centered text-center">
          <h2>Private Wikis I'm a collaborator:</h2>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="small-8 columns small-centered">
          <table>
            <thead>
              <tr>
                <th class="text-center">Title</th>
                <th class="text-center">Edit</th>
                <th class="text-center">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @collabwikis.each do |collabwiki| %>
                  <tr>
                    <td><strong><%= link_to collabwiki.title, wiki_path(collabwiki) %></strong></td>
                    <td><%= link_to "Edit", edit_wiki_path(collabwiki) %></td>
                    <td><%= link_to "Delete", wiki_path(collabwiki), method: :delete %></td>
                  </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
<% end %>
