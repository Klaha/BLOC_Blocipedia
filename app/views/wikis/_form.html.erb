<div class="row">
  <%= form_for wiki, :html => {class: 'small-11 small-centered columns'} do |f| %>
    <h2 class="text-center">Create Wiki:</h2>
    <div class="row">
      <div class="field small-12 columns">
        <% if wiki.errors.count == 0 %>
          <%= f.label :title %>
          <%= f.text_field :title, autofocus: true %>
        <% else %>
          <%= f.label :title, class: 'error' %>
          <%= f.text_field :title, class: 'error', autofocus: true %>
          <small class="error">
            <% @wiki.errors[:title].each do |error| %>
              <%= error %>
            <% end %>
          </small>
        <% end %>
      </div>      
    </div>
    <div class="row">
      <div class="field small-12 columns">
        <%= f.label :body %>
        <%= f.text_area :body %>
      </div>
    </div>
    <div class="row">
      <div class="field small-12 columns">
        <%= f.check_box :private %>
        <%= f.label :private, "Private?" %>
      </div>
    </div>
    <div class="row">
      <div class="actions small-10 small-centered columns text-center">
          <%= f.submit "Save", class: 'button small' %>
      </div>
    </div>
  <% end %>
</div>