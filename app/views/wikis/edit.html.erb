<div class="row">
  <div class="small-12 large-8 large-centered medium-8 medium-centered columns">
    <h2 class="text-center">Edit Wiki:</h2>
    <%= render partial: 'form', locals: { wiki: @wiki } %>
  </div>
</div>
<% if @wiki.private? && current_user.premium? %>
  <div class="row">
    <div class="small-12 columns">
      <h1 class="text-center">Colaborators</h1>
    </div>
    <div class="row">
      <div class="small-7 small-centered large-4 medium-4 medium-centered columns large-centered">
        <% @collaborators.each do |collab| %>
          <div class="row">
            <div class="small-2 large-2 columns">
              <%= collab.user.name %>
            </div>
            <div class="small-4 large-4 columns">
              <%= link_to "Remove", wiki_collaborator_path(@wiki, collab), class: 'button tiny alert', method: :delete %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= render partial: 'collaborators/form', locals: { wiki: @wiki, newcollaborator: @newcollaborator } %>
    </div>
  </div>
<% end %>