<div class="row">
  <div class="small-12 columns small-centered text-center">
    <h2>Wikis I'm collaborating:</h2>
  </div>
</div>
<br>
<div class="row">
  <div class="small-8 columns small-centered">
    <table>
      <thead>
        <tr>
          <th class="text-center">Title</th>
          <th class="text-center">Edit</th>
          <th class="text-center">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @userwikis.each do |wiki| %>
          <tr>
            <% if wiki.private? %>
              <td><strong><%= link_to wiki.title, wiki_path(wiki), style: 'color: red' %></strong></td>
            <% else %>
              <td><strong><%= link_to wiki.title, wiki_path(wiki) %></strong></td>
            <% end %>
            <td><%= link_to "Edit", edit_wiki_path(wiki) %></td>
            <td><%= link_to "Delete", wiki_path(wiki), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="small-12 columns small-centered text-center">
<%= link_to "New Wiki", new_wiki_path, class: 'button small info' %>
  </div>
</div>
